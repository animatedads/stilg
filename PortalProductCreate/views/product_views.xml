<odoo>
    <data>
        <!-- Define the view -->
        <record id="view_product_form_portal" model="ir.ui.view">
            <field name="name">product.form.portal</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <form string="Product" version="16.0">
                    <!-- Add fields for product creation -->
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="list_price"/>
                            <field name="description_sale"/>
                            <!-- Add more fields as needed -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the action -->
        <record id="action_product_form_portal" model="ir.actions.act_window">
            <field name="name">Product</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_product_form_portal"/>
            <field name="target">current</field>
        </record>

        <!-- Define the menu item -->
        <menuitem id="menu_product_portal" name="Products" parent="portal.portal_menu" sequence="10"/>
        <menuitem id="menu_product_create_portal" name="Create Product" parent="menu_product_portal" action="action_product_form_portal" sequence="10"/>
    </data>
</odoo>
