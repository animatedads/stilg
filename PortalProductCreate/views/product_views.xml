<odoo>
    <data>
        <!-- Define the view -->
        <record id="view_product_form_portal" model="ir.ui.view">
            <field name="name">product.form.portal</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <form string="Product" version="7.0">
                    <!-- Add your custom fields here -->
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <!-- Add more fields as needed -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the action -->
        <record id="action_product_form_portal" model="ir.actions.act_window">
            <field name="name">Create Product</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_product_form_portal"/>
            <field name="target">new</field>
        </record>

        <!-- Define the menu item -->
        <menuitem id="menu_product_form_portal" name="Create Product" parent="base.menu_portal_root" action="action_product_form_portal"/>
    </data>
</odoo>
